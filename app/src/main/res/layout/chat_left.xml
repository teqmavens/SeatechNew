<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:padding="10dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="45am"
        android:textColor="@color/appbasiccolor"
        android:textStyle="bold"
        android:textSize="12dp" />

    <RelativeLayout
        android:id="@+id/rlmsg"
        android:layout_width="460dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from"
        android:layout_marginTop="@dimen/verysmallpadding"
        android:background="@android:color/transparent">

        <!--<android.support.v7.widget.AppCompatTextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/llmessage"
            android:text="45am"
            android:textColor="#000000"
            android:textSize="12dp" />-->


        <RelativeLayout
            android:id="@+id/llmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatnormal_bg"
            android:padding="@dimen/smallpadding"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="from"
                android:textColor="@color/appbasiccolor"
                android:textStyle="bold"
                android:textSize="12dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_below="@+id/to"
                android:text="Messagefgfgdfgfdgfgfgdfgdfgfdgfdgfdgdfgfdgfdfdgdfgdfgf'kjlkjlkjdgdfg"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textSize="14dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/to"
                android:layout_below="@+id/to"
                app:srcCompat="@drawable/singletick" />

        </RelativeLayout>
    </RelativeLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
       android:layout_below="@+id/rlmsg"
        android:text="45am"
        android:textColor="#000000"
        android:textSize="11dp" />

</RelativeLayout>