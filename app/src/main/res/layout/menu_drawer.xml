<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="menudrawer"
            type="teq.development.seatech.Dashboard.LeftDrawer"></variable>
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leftdrawergradiant"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:onClick="@{()->menudrawer.OnClickDashboard()}"
        android:layout_weight=".2">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dashboardicon" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/smalltextsize"
            android:layout_marginTop="@dimen/verysmalltextsize"
            android:textColor="@color/white"
            android:text="@string/dashboard_text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:onClick="@{()->menudrawer.OnClickDetailPage()}"
        android:layout_weight=".2">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/detailpage" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/smalltextsize"
            android:layout_marginTop="@dimen/verysmalltextsize"
            android:textColor="@color/white"
            android:text="@string/runningjob"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:onClick="@{()->menudrawer.OnClickTimesheet()}"
        android:layout_weight=".2">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/timesheet" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/smalltextsize"
            android:layout_marginTop="@dimen/verysmalltextsize"
            android:textColor="@color/white"
            android:text="@string/timesheet"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:onClick="@{()->menudrawer.OnClickPickupJobs()}"
        android:layout_weight=".2">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/timesheet" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/smalltextsize"
            android:layout_marginTop="@dimen/verysmalltextsize"
            android:textColor="@color/white"
            android:text="@string/pickupjobsdr"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:onClick="@{()->menudrawer.OnClickSchedule()}"
        android:layout_weight=".2">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/big_calendar" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/smalltextsize"
            android:layout_marginTop="@dimen/verysmalltextsize"
            android:textColor="@color/white"
            android:text="@string/schedule"/>
    </LinearLayout>

</LinearLayout>
</layout>