<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="rowdashurgentmsg"
            type="teq.development.seatech.Dashboard.Adapter.AdapterDashbrdUrgentMsg"></variable>
    </data>

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/smallpadding"
    android:paddingLeft="@dimen/smallpadding"
    android:paddingRight="@dimen/smallpadding">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/jobskey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/jobh"
        android:drawablePadding="@dimen/mediumtextsize"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/verysmalltextsize"/>

   <!-- android:drawableLeft="@drawable/urgentmsg"-->

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/ticketno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/jobskey"
        android:text="1389"
        android:drawablePadding="@dimen/largetextsize"
        android:layout_marginLeft="@dimen/verysmallpadding"
        android:textColor="@color/appbasiccolor"
        android:textStyle="bold"
        android:textSize="@dimen/verysmalltextsize"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum est velit, maximus a dictum a, imperdiet id dui"
        android:drawablePadding="@dimen/largetextsize"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@+id/jobskey"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/verysmalltextsize"/>

</android.support.constraint.ConstraintLayout>
</layout>