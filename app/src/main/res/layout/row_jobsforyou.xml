<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="rowjobsforyou"
            type="teq.development.seatech.Dashboard.Adapter.AdapterJosbForYou"></variable>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/verysmallpadding"
        app:cardCornerRadius="@dimen/verysmallpadding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/verysmallpadding"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="@dimen/verysmallpadding">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".11"
                android:gravity="center"
                android:text="John"
                android:textColor="@color/black"
                android:textSize="@dimen/verysmalltextsize" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/jobticketno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".11"
                android:gravity="center"
                android:text="CF 10001"
                android:textColor="@color/appbasiccolor"
                android:textSize="@dimen/verysmalltextsize" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".11"
                android:gravity="center"
                android:text="Service"
                android:textColor="@color/black"
                android:textSize="@dimen/verysmalltextsize" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".11"
                android:gravity="center"
                android:text="address1"
                android:textColor="@color/black"
                android:textSize="@dimen/verysmalltextsize" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".11"
                android:gravity="center"
                android:text="09:00"
                android:textColor="@color/black"
                android:textSize="@dimen/verysmalltextsize" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".11"
                android:gravity="center"
                android:text="supervisor1"
                android:textColor="@color/black"
                android:textSize="@dimen/verysmalltextsize" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".11"
                android:gravity="center"
                android:text="tech1,tech2,tech3,tech4"
                android:textColor="@color/black"
                android:textSize="@dimen/verysmalltextsize" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".11"
                android:gravity="center"
                android:text="location1"
                android:textColor="@color/black"
                android:textSize="@dimen/verysmalltextsize" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".11"
                android:gravity="center">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/notesimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/notes" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>