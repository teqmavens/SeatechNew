<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="rowtsweek"
            type="teq.development.seatech.Timesheet.Skeleton.TSWeekSkeleton"></variable>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/verysmallpadding"
            app:cardCornerRadius="@dimen/verysmallpadding"
            app:cardElevation="@dimen/verysmallpadding">

            <LinearLayout
                android:id="@+id/lltop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/smallpadding"
                android:paddingTop="@dimen/smallpadding">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:gravity="center"
                    android:text="@{rowtsweek.week}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/drawablepadding" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:gravity="center"
                    android:text="@{rowtsweek.date}"
                    android:textColor="@color/appbasiccolor"
                    android:textSize="@dimen/drawablepadding" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:gravity="center"
                    android:text="@{rowtsweek.billable}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/drawablepadding" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:gravity="center"
                    android:text="@{rowtsweek.nonbillable}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/drawablepadding" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:gravity="center"
                    android:text="@{rowtsweek.total}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/drawablepadding" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>