<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="rowtimespent"
            type="teq.development.seatech.Dashboard.Skeleton.TimeSpentSkeleton"></variable>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/verysmallpadding"
        app:cardCornerRadius="@dimen/verysmallpadding"
        app:cardElevation="@dimen/verysmallpadding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/verysmallpadding"
            android:paddingTop="@dimen/verysmallpadding">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/lc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".33"
                android:gravity="center"
                android:text="@{rowtimespent.lcname}"
                android:textColor="@color/black"
                android:textSize="@dimen/verysmalltextsize" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".33"
                android:gravity="center"
                android:text="@{rowtimespent.starttime}"
                android:textColor="@color/black"
                android:textSize="@dimen/verysmalltextsize" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".33"
                android:gravity="center"
                android:text="@{rowtimespent.endtime}"
                android:textColor="@color/black"
                android:textSize="@dimen/verysmalltextsize" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>

